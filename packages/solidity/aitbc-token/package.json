    "chai": "^4.4.1",
    "hardhat": "^2.22.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
