[Unit]
Description=AITBC Exchange Frontend Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/exchange-frontend
Environment=PATH=/opt/exchange-frontend/.venv/bin
ExecStart=/opt/exchange-frontend/.venv/bin/python server.py --port 3002
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=aitbc-exchange-frontend

[Install]
WantedBy=multi-user.target
